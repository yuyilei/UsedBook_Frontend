<scroll-view class="" scroll-y="true" style="" wx:for="{{second_data}}" wx:key="id">
  <view class="detail-type1">
    <!-- 图片展示区 -->
    <swiper class="image-type" indicator-color="fgba(255,255,255,.5)" indicator-active-color="#fff" indicator-dots circular autoplay>
      <swiper-item>
        <image src="{{item.image}}"></image>
      </swiper-item>
      <!-- <swiper-item>
        <image src="cloud://xust-second-w7q6y.7875-xust-second-w7q6y-1300410405/images/homephoto01.jpg"></image>
      </swiper-item> -->
    </swiper>

    <!-- 时间 -->
    <view class="">
      <view>{{item.need_time}}</view>
    </view>
    <view class="cut-line"></view>

    <view class="title-height">
      <!-- 标题 -->
      <view class="title-type" style="height:100rpx">标题：\n{{item.name}}</view>
      </view>

    <view class="cut-line"></view>

    <view class="title-type" style="height:150rpx">详细信息：\n{{item.brief}}</view>

     <!-- 价格 -->
   <view class="press-style2">
    <text class="price_style" decode="true">^&nbsp;{{item.price}}</text>
    <view wx:if="{{item.islike == false}}" class="notlike-style">
      <image src="../../images/tabbar/notlike.png"></image>
    </view>
    <view wx:if="{{item.islike == true}}" class="like-style">
      <image src="../../images/tabbar/like.png"></image>
    </view>
  </view> 

  <!-- todo： 判断是不是自己，显示不同的按钮 -->
  <!-- 不是自己发布的，显示购买按钮-->
  <view wx:if="{{item.ispublisher == false}}" class="notlike-style"> 
  <button form-type="submit" data-id="{{item.id}}" bindtap="topurchase" class="button_type">购买</button>
  </view>
  
  <!---是自己发布的，根据状态不同，显示上架/下架 -->
  <view wx:if="{{item.ispublisher == true}}" class="notlike-style">
  <view wx:if="{{item.onsell == true}}" class="notlike-style">
  <button form-type="submit" data-id="{{item.id}}" bindtap="putoff" class="button_type">下架</button>
  </view>
  <view wx:if="{{item.onsell == false}}" class="notlike-style">
  <view wx:if="{{item.finished == false}}" class="notlike-style">
  <button form-type="submit" class="button_type">上架</button>
  </view>
  </view>
  </view> 
  
    <view class="cut-line"></view>

    <view class="title-type" style="height:100rpx">联系方式：\n{{item.need_connect}}
    </view>

    <view class="cut-line"></view>
  </view>
</scroll-view>